@{
	Layout = "_Layout";
}

@using PierresBakery.Models;

<h3>All treats:</h3>

@Html.ActionLink("Sort by Price", "Index", new {sortOrder = "price"})
<br><br>
@Html.ActionLink("Sort by Name", "Index")

@if (Model.Count == 0)
{
	<p>There are no treats in your database yet!</p>
}
else
{
	<ul>
		@foreach (Treat treat in Model)
		{
			<li>@Html.ActionLink($"{treat.TreatName}", "Details", new {id=treat.TreatId})</li>
		}
	</ul>
}

<p>@Html.ActionLink("Add a new treat", "Create")</p>