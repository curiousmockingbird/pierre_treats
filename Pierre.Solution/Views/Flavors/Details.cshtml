@{
  Layout = "_Layout";
}
@using PierresBakery.Models;

@if(Model.JoinEntities.Count == 0)
{
  <p>There are not any treats related to this flavor yet! </p>
}
else
{
  <h3> Here's all the treats related to @Model.FlavorName flavor: </h3>
  <ul>
  @foreach (var join in Model.JoinEntities)
  {
    <li>@Html.ActionLink($"{join.Treat.TreatName}", "Details", "Treats", new {id = join.Treat.TreatId})</li>
  }
  </ul> 
}
@using (Html.BeginForm("Delete", "Flavors"))
{
  @Html.Hidden("id", (int) @Model.FlavorId)
  <input type="submit" value="Delete flavor" onclick="return confirm('Are you sure you would like to delete @Model.FlavorName?')">
}
