@{
	Layout = "_Layout";
}

@using PierresBakery.Models;

@if (Model.Count == 0)
{
	<h4>There are currently no flavors in the database!</h4>
}
else
{
	<ul>
		@foreach (Flavor flavor in Model)
		{
			<li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new {id=flavor.FlavorId})</li>
		}
	</ul>
}

<p>@Html.ActionLink("Add a new flavor", "Create")</p>